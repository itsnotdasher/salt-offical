-- Animation effects
local TweenService = game:GetService("TweenService")

local function ButtonEffect(button)
    local originalSize = button.Size
    local originalPos = button.Position
    local originalColor = button.BackgroundColor3
    
    button.MouseEnter:Connect(function()
        if button.BackgroundTransparency < 1 then
            TweenService:Create(button, TweenInfo.new(0.1), {BackgroundColor3 = Color3.fromRGB(90, 140, 220)}):Play()
        else
            TweenService:Create(button, TweenInfo.new(0.1), {TextColor3 = Color3.fromRGB(120, 170, 255)}):Play()
        end
    end)
    
    button.MouseLeave:Connect(function()
        if button.BackgroundTransparency < 1 then
            TweenService:Create(button, TweenInfo.new(0.1), {BackgroundColor3 = originalColor}):Play()
        else
            TweenService:Create(button, TweenInfo.new(0.1), {TextColor3 = originalColor}):Play()
        end
    end)
    
    button.MouseButton1Down:Connect(function()
        if button.BackgroundTransparency < 1 then
            TweenService:Create(button, TweenInfo.new(0.1), {Size = originalSize - UDim2.new(0, 5, 0, 5)}):Play()
        end
    end)
    
    button.MouseButton1Up:Connect(function()
        if button.BackgroundTransparency < 1 then
            TweenService:Create(button, TweenInfo.new(0.1), {Size = originalSize}):Play()
        end
    end)
end

-- Apply effects to buttons
ButtonEffect(SubmitButton)
ButtonEffect(GetKeyButton)
ButtonEffect(CloseButton)

-- Functionality
GetKeyButton.MouseButton1Click:Connect(function()
    setclipboard("https://discord.gg/wHqn5eGCsU")
    
    local notification = Instance.new("TextLabel")
    notification.Name = "Notification"
    notification.Size = UDim2.new(1, -20, 0, 30)
    notification.Position = UDim2.new(0, 10, 1, -40)
    notification.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
    notification.BorderSizePixel = 0
    notification.Font = Enum.Font.Gotham
    notification.Text = "Copied Discord link to clipboard!"
    notification.TextColor3 = Color3.fromRGB(255, 255, 255)
    notification.TextSize = 12
    notification.Visible = false
    notification.Parent = MainFrame
    
    local UICorner5 = Instance.new("UICorner")
    UICorner5.CornerRadius = UDim.new(0, 6)
    UICorner5.Parent = notification
    
    notification.Visible = true
    TweenService:Create(notification, TweenInfo.new(0.2), {Position = UDim2.new(0, 10, 1, -80)}):Play()
    
    wait(3)
    
    TweenService:Create(notification, TweenInfo.new(0.2), {Position = UDim2.new(0, 10, 1, -40)}):Play()
    wait(0.2)
    notification:Destroy()
end)

SubmitButton.MouseButton1Click:Connect(function()
    if KeyEntry.Text == "saltyer" then
        -- Correct key
        loadstring(game:HttpGet("https://raw.githubusercontent.com/itsnotdasher/Voluted-Hub-V-1.1/refs/heads/main/balls"))()
        ScreenGui:Destroy()
    else
        -- Incorrect key
        local originalColor = KeyEntry.BackgroundColor3
        TweenService:Create(KeyEntry, TweenInfo.new(0.1), {BackgroundColor3 = Color3.fromRGB(80, 40, 40)}):Play()
        wait(0.5)
        TweenService:Create(KeyEntry, TweenInfo.new(0.3), {BackgroundColor3 = originalColor}):Play()
    end
end)

CloseButton.MouseButton1Click:Connect(function()
    TweenService:Create(MainFrame, TweenInfo.new(0.2), {Size = UDim2.new(0, 350, 0, 0)}):Play()
    wait(0.2)
    ScreenGui:Destroy()
end)

-- Initial animation
MainFrame.Size = UDim2.new(0, 350, 0, 0)
MainFrame.Visible = true
TweenService:Create(MainFrame, TweenInfo.new(0.3), {Size = UDim2.new(0, 350, 0, 200)}):Play()

-- Add to player's GUI
local player = game.Players.LocalPlayer
ScreenGui.Parent = player:WaitForChild("PlayerGui")
